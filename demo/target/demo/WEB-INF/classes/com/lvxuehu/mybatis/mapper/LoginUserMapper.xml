<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lvxuehu.mybatis.mapper.LoginUserMapper">

    <!--<cache/>-->

    <select id="getUserById" parameterType="int" resultType="LoginUser">
       SELECT *  FROM sys_loginuser  WHERE ID = #{id}
    </select>

    <insert id="insertUser" parameterType="LoginUser">
        insert into sys_loginuser
          (name)
        values
        (#{name})
    </insert>

</mapper>